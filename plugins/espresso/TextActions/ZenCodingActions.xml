<?xml version="1.0"?>
<action-recipes>
	<!-- Espresso natively supports Expand Abbreviation, Wrap With Abbreviation, Remove Tag, and Next/Prev Edit Point -->

	<!-- Zen Coding actions -->
	
	<action id="ru.zen-coding.espresso.PrevEditPoint" category="zencoding.root/zencoding.traverse/1">
		<script>zen_actions.js</script>
		<key-equivalent>command option arrow-left</key-equivalent>
		<setup>
			<action>select_previous_item</action>
		</setup>
	</action>
	
	<action id="ru.zen-coding.espresso.PrevEditPoint" category="zencoding.root/zencoding.traverse/2">
		<script>zen_actions.js</script>
		<key-equivalent>command option arrow-right</key-equivalent>
		<setup>
			<action>select_next_item</action>
		</setup>
	</action>
	
	<action id="ru.zen-coding.espresso.ToggleComment" category="zencoding.root">
		<script>zen_actions.js</script>
		<key-equivalent>command \</key-equivalent>
		<setup>
			<action>toggle_comment</action>
		</setup>
	</action>
	
	<action id="ru.zen-coding.espresso.EvaluateMath" category="zencoding.root/zencoding.numbers">
		<script>zen_actions.js</script>
		<key-equivalent>command y</key-equivalent>
		<setup>
			<action>evaluate_math_expression</action>
		</setup>
	</action>
	
