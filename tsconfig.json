{
  "compilerOptions": {
    "target": "es2017",
    "sourceMap": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "newLine": "LF",
    "outDir": "./dist"
  },
  "include": ["src"]
}
