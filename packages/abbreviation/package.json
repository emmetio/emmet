  "keywords": [
    "emmet",
    "abbreviation"
  ],
  "author": "Sergey Chikuyonok <serge.che@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@emmetio/scanner": "^1.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.9.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emmetio/emmet.git"
  },
  "bugs": {
    "url": "https://github.com/emmetio/emmet/issues"
  },
  "homepage": "https://github.com/emmetio/emmet#readme",
