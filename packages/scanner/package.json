{
  "name": "@emmetio/scanner",
  "version": "1.0.4",
  "description": "Scans given text character-by-character",
  "main": "./dist/scanner.cjs",
  "module": "./dist/scanner.js",
  "types": "./dist/scanner.d.ts",
  "type": "module",
  "exports": {
    "import": "./dist/scanner.js",
    "require": "./dist/scanner.cjs"
